					</dl>
				</div>
				<div class="chart equalMarginRegulator" id="treant-container">
					<p>No Element has been selected</p>
				</div>
			</div>
		</div>
	</div>
	<!-- The Modal -->
	<div id="ContextMenuModal" class="modal">
		<div class="modal-wrapper">
			<div class="modal-header">
				<h2 id="modal-header">
					<span id="modal-close-x" class="modal-close" style="float: right;">&times;</span>
				</h2>
				<hr>
			</div>
