<h3>Settings for the prompting events for definition of done checking</h4>

#foreach($workflowActionName in $workflowActionNames)
<div class="field-group">
    <label>DoD check for $workflowActionName event activated?</label>
    <aui-toggle id="isDoDCheckingActivated-$workflowActionName.replaceAll(' ', '')" label="$workflowActionName event activated?"
    #if($project.getPromptingEventConfiguration().isPromptEventActivated("definitionOfDoneChecking", $workflowActionName))
		checked
	#end
    ></aui-toggle>
    <div class="description">
    	Enables or disables the just-in-time-prompt for the $workflowActionName event of a Jira issue.
    </div>
</div>

<script>
	$("#isDoDCheckingActivated-$workflowActionName.replaceAll(' ', '')").change(function() {
		const isActivated = $(this).prop("checked");
		conDecNudgingAPI.activatePromptEvent("$projectKey", "definitionOfDoneChecking", "$workflowActionName", isActivated);
	});
</script>
#end