<div class="field-group top-label">
    <label for="min-probability-link">Minimum Score for Link Recommendation (Threshold)</label>
    <input class="text short-field" type="number"
           data-aui-validation-field
           value="$linkRecommendationConfig.getMinProbability()"
           step="0.05" min="0" max="1"
           id="min-probability-link" />
    <button id="save-min-probability-link-btn" class='aui-button'>Save</button>
    <div class="description">Sets the minimum recommendation score, i.e. the threshold to create a recommendation.
    	An unlinked element is recommended if its <code>recommendationScore >= threshold</code>.
    </div>
</div>

<script>
	$("#save-min-probability-link-btn").click(event => {
		event.preventDefault();
		conDecLinkRecommendationAPI.setThreshold("$projectKey", $("#min-probability-link").val());
    });
</script>