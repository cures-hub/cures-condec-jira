<div class="quality-check-container">
    This issue requires <label id="quality-check-minimum-coverage-$viewIdentifier"></label>
    within a link distance of <label id="quality-check-link-distance-$viewIdentifier"></label>.

    <br/>

    It reaches <label id="quality-check-coverage-$viewIdentifier"></label>.

    <br/>
    <br/>

    <div class="text-field" id="quality-check-problems-text-$viewIdentifier">
    </div>
</div>

<script>
    /* Adds the on click listener on tab opening */
    $(document).ready(function () {
        var isOnceClicked = false;
        AJS.$("#jira-issue-tabs").on("tabSelect", function (event) {
            if (!isOnceClicked && event.target.href.includes("#quality-check")) {
                conDecQualityCheck.initView("jira-issue-module", null);
                isOnceClicked = true;
            }
        });
    });
</script>