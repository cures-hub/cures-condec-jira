<div class="aui-buttons">
	<button class="aui-button" id="btnAddCriterion" title="Adds a new criterion column to the decision table.">
		<span class="aui-icon aui-icon-small aui-iconfont-new-edit">Adds a new criterion column to decision table</span>
		Criterion
	</button>
	<button class="aui-button" id="btnAddAlternative" title="Adds a new solution option to the decision table.">
		<span class="aui-icon aui-icon-small aui-iconfont-add">Adds a new solution option to decision table</span>
		Solution option
	</button>
	<button class="aui-button aui-dropdown2-trigger" id="btnAddArgument" aria-owns="dropdown2-more" aria-haspopup="true">
		Create argument for solution option
	</button>
	<div id="dropdown2-more" class="aui-dropdown2 aui-style-default">
		<ul class="aui-list-truncate" id="alternative-dropdown-items"></ul>
	</div>
</div>
<div style="height: auto; overflow-x: auto;" id="decision-table-container-$viewIdentifier"></div>