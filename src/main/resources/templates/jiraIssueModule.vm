<script>
    console.log("ASDF:", AJS.$('#visualization-selection-tabs'))
/*
 * Instantiate the ConDecJiraIssueModule object controlling this view:
 */
$(document).ready(function() {
    conDecAPI.checkIfProjectKeyIsValid();

    if (window.conDecJiraIssueModule.init(conDecAPI, conDecObservable, conDecDialog, conDecContextMenu, conDecTreant,
            conDecVis)) {
        window.conDecJiraIssueModule.initView();
        window.conDecJiraIssueModule.initFilter();
        // For now always both visualization are loaded. It's not the fastest, but can be fixed
        window.conDecJiraIssueModule.initTreant();
        window.conDecJiraIssueModule.initVis();
    }
    else {
        console.error("ConDecJiraIssueModule could not get its dependencies.");
    }

});

    // add functionality so that only the selected view is loaded
    AJS.$('#visualization-selection-tabs').bind('tabSelect', function(e,o){
        console.log("tab switched");
        if (o.tab.attr("href")=="#treant") {
            window.conDecJiraIssueModule.initTreant();
        } else {
            window.conDecJiraIssueModule.initVis();
        }
    });
</script>