<div>
<form class="aui">
    <input class="text medium-long-field" id="jstree-search-input-code"
           placeholder="$i18n.getText('condec.filter.label')"/>
    <select id="select-root-element-type-code" name="select-root-element-type-code"
            class="select medium-field" onchange="conDecObservable.notify()"></select>
    <input type="text" class="text medium-long-field"
           id="element-input-field-code" placeholder="$i18n.getText('condec.create.label')"/>
    <input type="button" id="create-element-button-code"
           class="aui-button aui-button-primary" value="$i18n.getText('condec.button.create')"/>
	#set($select2-decision-group = "select2-decision-group-code")    
  	#parse("templates/filter/decisionGroup.vm")          
	#set ($linkDistanceInputId = "depth-of-tree-input")	
	#parse("templates/filter/linkDistance.vm")
	

</form>
</div>
<div class="aui-group">
    <div id="resizable" class="left">
        <div id="jstree-code"></div>
    </div>
    <div id="treant-container-code" class="right"></div>
</div>
<script>
    /*
     * Instantiate the ConDecCodeClassPage object controlling this view:
     */
    $(document).ready(function() {
        conDecAPI.checkIfProjectKeyIsValid();
        if ( window.ConDecCodeClassPage.init(conDecAPI, conDecObservable, conDecDialog, conDecContextMenu, conDecTreant, conDecTreeViewer) ){
            window.ConDecCodeClassPage.fetchAndRender();
        }else {
            console.error("ConDecCodeClassPage could not get its dependencies.");
        }
    });

    $("#select2-decision-group").on("change.select2", function (e) {
    	conDecObservable.notify();
    });
    

    
    
</script>