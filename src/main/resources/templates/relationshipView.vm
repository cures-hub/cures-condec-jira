<div class="aui-group">
    <div class="aui-toolbar2" role="toolbar">
        <div class="aui-toolbar-2-inner">
        	<form class="aui">        	
        		#set ($viewIdentifier = "graph")
        		#parse("templates/filter/text.vm")
        		#parse("templates/filter/knowledgeType.vm")
        		#parse("templates/filter/status.vm")
        		#parse("templates/filter/linkType.vm")    
        		#parse("templates/filter/decisionGroup.vm")        		
        		#parse("templates/filter/degree.vm")
        		#parse("templates/filter/isDecisionKnowledgeOnly.vm")
        		#parse("templates/filter/creationDate.vm")	

        		#parse("templates/filter/filterButton.vm")
        	</form>
        </div>
    </div>
    <div id="graph-container" class="graph"></div>
</div>

<script>
    $(document).ready(function() {
        conDecAPI.checkIfProjectKeyIsValid();
        if(window.conDecRelationshipPage.init(conDecAPI, conDecObservable, conDecVis)) {
            conDecAPI.checkIfProjectKeyIsValid();
            var click = 0;
        	AJS.$("#menu-item-graph").on("click", function(event) {
        		if (click === 0) {
        			window.conDecRelationshipPage.updateView();
        		}
        		click++;
        	});  
        }
        else {
            console.error("ConDecRelationshipPage could not get its dependencies.");
        }
    });
</script>