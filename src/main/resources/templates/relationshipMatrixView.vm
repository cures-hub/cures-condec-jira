<form class="aui">
	#set ($knowledgeTypeDropdownId = "knowledge-type-dropdown-matrix")
	#parse("templates/filter/knowledgeType.vm")

	#set ($statusDropdownId = "status-dropdown-matrix")	
    #parse("templates/filter/status.vm")

    #set ($textInputId = "search-input-matrix")
    #parse("templates/filter/text.vm")

    #set ($filterButtonId = "filter-button-matrix")
    #parse("templates/filter/filterButton.vm")
</form>
<div class="container">
    <table class="aui aui-table-list aui-table-sortable" id="matrix"></table>
</div>
<div class='my-legend'>
    <div class='legend-title'>Relationship Types</div>
    <div class='legend-scale'>
        <ul class='legend-labels' id="legendList">
        </ul>
    </div>
</div>

<script>
    $(document).ready(function() {
        conDecAPI.checkIfProjectKeyIsValid();
        if(window.conDecRelationshipMatrixPage.init(conDecAPI, conDecObservable)) {
            conDecAPI.checkIfProjectKeyIsValid();
            var click = 0;
        	AJS.$("#menu-item-matrix").on("click", function(event) {
        		if (click === 0) {
        			window.conDecRelationshipMatrixPage.buildMatrix();
                    window.conDecRelationshipMatrixPage.buildLegend();
        		}
        		click++;
        	});  
        }
        else {
            console.error("ConDecRelationshipMatrixPage could not get its dependencies.");
        }
    });
</script>