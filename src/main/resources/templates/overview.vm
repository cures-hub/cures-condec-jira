<form class="aui">
	#set ($viewIdentifier = "overview")
	#parse("templates/filter/text.vm")

    <select id="select-root-element-type" name="knowledge-type-dropdown-overview"
            class="select short-field" onchange="conDecKnowledgePage.updateView()"></select>
    <input type="text" class="text medium-field"
           id="element-input-field" placeholder="$i18n.getText('condec.create.label')"/>
    <input type="button" id="create-element-button"
           class="aui-button aui-button-primary" value="$i18n.getText('condec.button.create')"/>

  	#parse("templates/filter/decisionGroup.vm")  
    #parse("templates/filter/status.vm")
	#parse("templates/filter/linkDistance.vm")
	#parse("templates/filter/degree.vm")
	#parse("templates/filter/creationDate.vm")
	#parse("templates/filter/isDecisionKnowledgeOnly.vm")
</form>
<div class="aui-group">
    <div id="resizable" class="left">
        <div id="jstree"></div>
    </div>
    <div id="treant-container" class="right"></div>
</div>
<script>
  /* Instantiate the ConDecKnowledgePage object controlling this view: */
  $(document).ready(function() {
        conDecAPI.checkIfProjectKeyIsValid();
        if ( window.conDecKnowledgePage.init(conDecAPI, conDecObservable, conDecDialog, 
        		conDecContextMenu, conDecTreant, conDecTreeViewer) ) {
        	var click = 0;
        	AJS.$("#menu-item-overview").on("click", function(event) {
        		if (click === 0) {
        			window.conDecKnowledgePage.fetchAndRender();
        		}
        		click++;
        	}); 
  		}
        else {
            console.error("ConDecKnowledgePage could not get its dependencies.");
        }       
    }); 
</script>