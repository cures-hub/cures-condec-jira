<div>
<form class="aui">
	#set ($textInputId = "jstree-search-input")
	#parse("templates/filter/text.vm")

    <select id="select-root-element-type" name="select-root-element-type"
            class="select short-field" onchange="conDecRationaleBacklogPage.updateView()"></select>
    <input type="text" class="text medium-field"
           id="element-input-field-backlog" placeholder="$i18n.getText('condec.create.label')"/>
    <input type="button" id="create-element-button-backlog"
           class="aui-button aui-button-primary" value="$i18n.getText('condec.button.create')"/>
           
	#set($select2-decision-group = "select2-decision-group")    
  	#parse("templates/filter/decisionGroup.vm")  
  	
  	#set ($statusDropdownId = "status-dropdown-rationale-backlog")
    #parse("templates/filter/status.vm")
  			
	#set ($linkDistanceInputId = "link-distance-input")	
	#parse("templates/filter/linkDistance.vm")
    
	#parse("templates/filter/isDecisionKnowledgeOnly.vm")
</form>
</div>
<div class="aui-group">
    <div id="resizable" class="left">
        <div id="jstree"></div>
    </div>
    <div id="treant-container" class="right"></div>
</div>
<script>
    /*
     * Instantiate the ConDecRationaleBacklogPage object controlling this view:
     */
    $(document).ready(function() {
        conDecAPI.checkIfProjectKeyIsValid();
        if ( window.conDecRationaleBacklogPage.init(conDecAPI, conDecObservable, conDecDialog, conDecContextMenu, conDecTreant, conDecTreeViewer) )
            window.conDecRationaleBacklogPage.fetchAndRender();
        else {
            console.error("ConDecRationaleBacklogPage could not get its dependencies.");
        }       
    }); 
</script>