<section id="export-dialog" class="aui-dialog2 aui-dialog2-medium aui-layer" aria-hidden="true" role="dialog">
	<header class="aui-dialog2-header">
		<h2 class="aui-dialog2-header-main">$i18n.getText("condec.export.as.table.item.label")</h2>
		<a class="aui-dialog2-header-close">
			<span class="aui-icon aui-icon-small aui-iconfont-close-dialog">Close</span>
		</a>
	</header>
    <form class="aui">
        <fieldset class="group" id="exportDecisionKnowledgeFieldSet">
            <div class="radio">
                <input class="radio" type="radio" checked="checked"
                       name="radiobuttons" id="exportLinkedElementsJson">
                <label for="exportLinkedElementsJson">Export Linked Elements (Json)</label>
            </div>
            <div class="radio">
                <input class="radio" type="radio"
                       name="radiobuttons" id="exportLinkedElementsDocument">
                <label for="exportLinkedElementsDocument">Export Linked Elements (Document)</label>
            </div>
            <div class="radio">
                <input class="radio" type="radio"
                       name="radiobuttons" id="exportLinkedAndMatchingQueryElementsJson">
                <label for="exportLinkedAndMatchingQueryElementsJson">Export Elements Matching Query and Linked (Json)</label>
            </div>
            <div class="radio">
                <input class="radio" type="radio"
                       name="radiobuttons" id="exportLinkedAndMatchingQueryElementsDocument">
                <label for="exportLinkedAndMatchingQueryElementsDocument">Export Elements Matching Query and Linked (Document)</label>
            </div>
        </fieldset>
    </form>
    <footer class="aui-dialog2-footer">
        <div class="aui-dialog2-footer-actions">
            <button id="export-dialog-cancel-button" class="aui-button aui-button-link"
                    onclick="AJS.dialog2('#export-dialog').hide()">$i18n.getText("condec.button.cancel")
			</button>
            <button id="export-dialog-confirm-button" class="aui-button aui-button-primary"
                    >$i18n.getText("condec.button.ok")
			</button>
		</div>
	</footer>
</section>