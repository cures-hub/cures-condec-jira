<section id="export-dialog" class="aui-dialog2 aui-dialog2-medium aui-layer" aria-hidden="true" role="dialog">
	<header class="aui-dialog2-header">
		<h2 class="aui-dialog2-header-main">$i18n.getText("condec.export.as.table.item.label")</h2>
		<button class="aui-close-button" type="button" id="export-dialog-cancel-icon" aria-label="close"></button>
	</header>
	<div id="export-dialog-content" class="aui-dialog2-content">
		<form class="aui">
			<div class="field-group">
				<label for="form-radio-export-format">$i18n.getText("condec.label.export.format"):</label>
				<div class="radio">
					<input class="radio" type="radio" checked="checked" name="form-radio-export-format" id="form-radio-export-format-document" value="document">
					<label for="form-radio-export-format-document">Word Document</label>
				</div>
				<div class="radio">
					<input class="radio" type="radio" name="form-radio-export-format" id="form-radio-export-format-json" value="json">
					<label for="form-radio-export-format-json">JSON</label>
				</div>
				<div class="radio">
					<input class="radio" type="radio" name="form-radio-export-format" id="form-radio-export-format-markdown" value="markdown">
					<label for="form-radio-export-format-markdown">Markdown</label>
				</div>
            </div>
       </form>
    </div>
	<footer class="aui-dialog2-footer">
		<div class="aui-dialog2-footer-actions">
			<button id="export-dialog-submit-button" class="aui-button aui-button-primary">$i18n.getText("condec.button.ok")</button>
			<button id="export-dialog-cancel-button" class="aui-button aui-button-link">$i18n.getText("condec.button.cancel")</button>
		</div>
	</footer>
</section>