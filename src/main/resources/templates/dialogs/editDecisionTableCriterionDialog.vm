<section id="criteria-dialog" class="aui-dialog2 aui-dialog2-small aui-layer" role="dialog" aria-hidden="true">
    <header class="aui-dialog2-header">
        <h2 class="aui-dialog2-header-main">Edit Criteria</h2>
        <button class="aui-close-button" type="button" aria-label="close"></button>
    </header>
    <div class="aui-dialog2-content">
    	<form>
    		<table class="aui aui-table-list">
    			<thead>
    				<tr>
    					<th id="criterion-number">Enabled</th>
    					<th id="criterion-name">Criterion</th>
    				</tr>
    			</thead>
    			<tbody id="criteria-table-body">
    			</tbody>
    		</table>
    	</form>
    	<p>Available criteria are configured at the <a id="link-to-settings" target="_blank">rationale model settings page</a>.</p>
	</div>
	<footer class="aui-dialog2-footer">
		<div class="aui-dialog2-footer-actions">
			<button id="criteria-dialog-submit-button" class="aui-button aui-button-primary">Apply</button>
			<button id="criteria-dialog-cancel-button" class="aui-button aui-button-link">$i18n.getText("condec.button.cancel")</button>
		</div>
    </footer>
</section>