<section id="link-dialog" class="aui-dialog2 aui-dialog2-medium aui-layer" role="dialog" aria-hidden="true">
	<header class="aui-dialog2-header">
		<h2 id="link-dialog-header" class="aui-dialog2-header-main">$i18n.getText("condec.context.menu.link.item.label")</h2>
		<button class="aui-close-button" type="button" id="link-dialog-cancel-icon" aria-label="close"></button>
	</header>
	<div id="link-dialog-content" class="aui-dialog2-content">
		<form class="aui">
			<div class="field-group">
				<label for="link-form-select-element">$i18n.getText("condec.label.unlinked.elements"):</label>
				<select id="link-form-select-element" class="select full-width-field"></select>			
			</div>
			<div class="field-group">
				<label for="link-form-select-linktype">$i18n.getText("condec.label.link.type"):</label>
				<select id="link-form-select-linktype" class="select full-width-field"></select>
			</div>
		</form>
    </div>
	<footer class="aui-dialog2-footer">
		<div class="aui-dialog2-footer-actions">
			<button id="link-dialog-submit-button" class="aui-button aui-button-primary">$i18n.getText("condec.button.link")</button>
			<button id="link-dialog-cancel-button" class="aui-button aui-button-link">$i18n.getText("condec.button.cancel")</button>
		</div>
	</footer>
</section>